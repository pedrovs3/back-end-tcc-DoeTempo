generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String
  name       String
  password   String
  cpf        String
  birthdate  DateTime
  rg         String?
  id_gender  String
  id_address String

  gender  Gender  @relation(fields: [id_gender], references: [id])
  address Address @relation(fields: [id_address], references: [id])
  Phone   Phone[]

  @@unique([email])
  @@map("tbl_user")
}

model Gender {
  id           String @id @default(uuid())
  name         String
  abbreviation String
  User         User[]

  @@unique([abbreviation, name])
  @@map("tbl_gender")
}

model Phone {
  id      String  @id @default(uuid())
  number  String?
  id_user String

  user User @relation(fields: [id_user], references: [id], onDelete: Cascade)

  @@map("tbl_phone")
}

model Address {
  id          String  @id @default(uuid())
  postal_code String
  number      String
  complement  String?

  User User[]

  @@map("tbl_address")
}

